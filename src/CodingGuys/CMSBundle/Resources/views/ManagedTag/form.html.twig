{% extends "CodingGuysCMSBundle:ManagedTag:layout.html.twig" %}

{% block mainContent %}
    <div class="container">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.displaySeq) }}
            {{ form_errors(form.displaySeq) }}
            {{ form_widget(form.displaySeq, {'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.key) }}
            {{ form_errors(form.key) }}
            {{ form_widget(form.key, {'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.nameChi) }}
            {{ form_errors(form.nameChi) }}
            {{ form_widget(form.nameChi, {'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.nameEng) }}
            {{ form_errors(form.nameEng) }}
            {{ form_widget(form.nameEng, {'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.imageLink) }}
            {{ form_errors(form.imageLink) }}
            {{ form_widget(form.imageLink, {'attr': {'class': 'form-control'} }) }}
        </div>
        {{ form_end(form) }}

        <ul class="record_actions list list-inline">
            <li>
                <a href="{{ path('managedTag_home') }}" class="btn btn-link">
                    Back to the list
                </a>
            </li>
        </ul>
    </div>
{% endblock %}