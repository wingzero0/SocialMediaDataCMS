{% extends "CodingGuysCMSBundle:SpotlightAds:layout.html.twig" %}

{% block mainContent %}
    <div class="container">
        <div class="page-header">
            <a href="{{ path('spotlightAds_home') }}">&laquo;&nbsp;Back to Ad list</a>
        </div>
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_errors(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.displaySeq) }}
            {{ form_errors(form.displaySeq) }}
            {{ form_widget(form.displaySeq, {'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.imageLink) }}
            {{ form_errors(form.imageLink) }}
            {{ form_widget(form.imageLink, {'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.landingPage) }}
            {{ form_errors(form.landingPage) }}
            {{ form_widget(form.landingPage, {'attr': {'class': 'form-control'} }) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
