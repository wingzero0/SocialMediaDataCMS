{% extends "CodingGuysCMSBundle:SpotlightAds:layout.html.twig" %}

{% block mainContent %}
    <style>
        th, li{
            white-space: nowrap;
        }
        ul{
            padding: 0;
            list-style-type: none;
        }
    </style>
    <div class="container">
        <div class="page-header">
            <h2>Ads <a href="{{ path('spotlightAds_create') }}" class="btn btn-default btn-sm">Create</a></h2>
        </div>
        <p>{{ pagination.getTotalItemCount }} item(s)</p>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Description</th>
                <th>Display Seq</th>
                <th>Image Link</th>
                <th>Landing Page</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
                {% for document in pagination %}
                    <tr>
                        <td><a href="{{ path('spotlightAds_edit', {id: document.id}) }}">{{ document.description }}</a></td>
                        <td>{{ document.displaySeq }}</td>
                        <td><img src="{{ document.imageLink }}" style="max-width: 100px;"></td>
                        <td>{{ document.landingPage }}</td>
                        <td>
                            <a href="{{ path('spotlightAds_edit', {id: document.id}) }}">edit</a>
                            &nbsp;&middot;&nbsp;
                            <a href="{{ path('spotlightAds_delete', {id: document.id}) }}">delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="text-center">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
