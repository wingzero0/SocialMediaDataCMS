{% extends "CodingGuysCMSBundle:Settings:layout.html.twig" %}

{% block mainContent %}
    <style>
        th, li{
            white-space: nowrap;
        }
        ul{
            padding: 0;
            list-style-type: none;
        }
    </style>
    <div class="container">
        <h1 class="page-header"><strong>Settings</strong></h1>
        <div class="navbar-header">
            <a class="btn btn-primary btn-large" href="{{ path('weighting_create') }}"> Create Weighting </a>
        </div>
        <table class="records_list table table-striped table-bordered table-condensed">
            <thead>
            <tr>
                <th>Name</th>
                <th>Value</th>
                <th>Delete Action</th>
            </tr>
            </thead>
            <tbody>
            {% for document in pagination %}
                <tr>
                    <td><a href="{{ path('weighting_edit', {id:document.id}) }}">{{ document.name }}</a></td>
                    <td>{{ document.value }}</td>
                    <td><a href="{{ path('weighting_delete', {id:document.id}) }}">Delete</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="text-center">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}