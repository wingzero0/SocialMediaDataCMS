{% extends "CodingGuysCMSBundle:MnemonoBiz:layout.html.twig" %}

{% block mainContent %}
    <style>
        ul{
            padding: 0;
            list-style-type: none;
        }
    </style>
    <div class="container">

        <div class="page-header">
            <a href="{{ path('mnemonobiz_home') }}">All Biz</a>
            <h2>
                {{ document.name }}
                <a href="{{ path('mnemonobiz_edit', { 'id': document.id }) }}" class="btn btn-default btn-sm">
                    Edit
                </a>
            </h2>
        </div>

        <table class="record_properties table table-striped">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ document.name }}</td>
            </tr>
            <tr>
                <th>ShortDesc</th>
                <td>{{ document.shortDesc }}</td>
            </tr>
            <tr>
                <th>LongDesc</th>
                <td>{{ document.longDesc }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ document.category }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>
                    <ul class="list">
                        {% for tag in document.tags %}
                            <li>{{ tag }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Address</th>
                <td>
                    <ul class="list">
                        {% for address in document.addresses %}
                            <li>{{ address }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Cities</th>
                <td>
                    <ul class="list">
                        {% for city in document.cities %}
                            <li>{{ city }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Phones</th>
                <td>
                    <ul class="list">
                        {% for phone in document.phones %}
                            <li>{{ phone }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Faxes</th>
                <td>
                    <ul class="list">
                        {% for fax in document.faxes %}
                            <li>{{ fax }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Websites</th>
                <td>
                    <ul class="list">
                        {% for website in document.websites %}
                            <li>{{ website }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Weighting</th>
                <td>{{ document.weighting }}</td>
            </tr>
            <tr>
                <th>ImportFrom</th>
                <td>{{ document.importFrom }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    {% block footer %}
        <div class="container">
            {{ parent() }}
        </div>
    {% endblock %}
{% endblock %}
